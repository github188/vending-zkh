<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:name="@+id/relout_weight_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        >

        <ListView
            android:id="@+id/weight_listview_datalist"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical" >
        </ListView>

        <Button
            android:id="@+id/btn_noSkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/weight_listview_datalist"
            android:text="去皮" />

        <Button
            android:id="@+id/btn_setZero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/weight_listview_datalist"
            android:text="置零" />

        <Button
            android:id="@+id/btn_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/btn_noSkin"
            android:text="设置" />

        <Button
            android:id="@+id/btn_getWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/btn_setZero"
            android:text="获取重量" />


    </RelativeLayout>

    <RelativeLayout
        android:name="@+id/relout_weight_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
         >
        <TextView 
            android:id="@+id/tv_weight_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="托盘A"
            />
        <EditText 
            android:id="@+id/txt_weight_a"
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView 
            android:id="@+id/tv_weight_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_weight_a"
            android:text="托盘B"
            />
        <EditText 
            android:id="@+id/txt_weight_b"
            android:inputType="text"
            android:layout_below="@id/txt_weight_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView 
            android:id="@+id/tv_weight_c"
            android:layout_below="@id/tv_weight_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="托盘C"
            />
        <EditText 
            android:id="@+id/txt_weight_c"
            android:inputType="text"
            android:layout_below="@id/txt_weight_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_setting_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_weight_c"
            android:text="返回" />

        <Button
            android:id="@+id/btn_setting_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txt_weight_c"
            android:text="保存" />
    </RelativeLayout>

</LinearLayout>